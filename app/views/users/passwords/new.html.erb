<div>
  <a class="hiddenanchor" id="signin"></a>

  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <h1>Esqueceu a sua senha?</h1>
        
          <div>
            <%= f.email_field :email, autofocus: true, placeholder:"Email", class:"form-control" %>
          </div>

          <div>
            <%= f.submit "Enviar instruções para a nova senha", class:"btn btn-secondary submit actions" , style: "float: none; margin-left: 0px;"%>
          </div>
          
          <div class="clearfix"></div>

          <div class="separator">
            <div class="clearfix"></div>
            <br />

            <div>
              <h1><i class="fa fa-paw"></i> Site Time to Answer</h1>
              <p>©2020 All Rights Reserved. Gabriel Pértile Soares! Is a Bootstrap 3 template. Privacy and Terms</p>
            </div>
          </div>
        <% end %>
      </section>
    </div>
  </div>
</div>
